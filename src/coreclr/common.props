<Project>
  <Import Project="$(MSBuildThisFileDirectory)/version.props" />

  <PropertyGroup Label="Repository information">
    <Product>Microsoft .NET Core Performance</Product>
    <RepositoryUrl>https://github.com/dotnet/performance</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup Label="Common build properties">
    <LangVersion>latest</LangVersion>
    <CodeAnalysisGenerateSuccessFile>false</CodeAnalysisGenerateSuccessFile>
    <RunCodeAnalysis>true</RunCodeAnalysis>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <UseSharedCompilation>false</UseSharedCompilation>
    <WarningLevel>4</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <AssemblyName>DotNetBenchmark-$(MSBuildProjectName)</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Label="NuGet package information">
    <PackageIconUrl>http://go.microsoft.com/fwlink/?LinkID=288859</PackageIconUrl>
    <PackageProjectUrl>$RepositoryUrl</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <!--
      Suppress warnings for using preview SDK:
      You are working with a preview version of the .NET Core SDK.
      You can define the SDK version via a global.json file in the current project.
      More at https://go.microsoft.com/fwlink/?linkid=869452
    -->
    <SuppressNETCoreSdkPreviewMessage>true</SuppressNETCoreSdkPreviewMessage>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Diagnostics.Tracing.TraceEvent" Version="$(MicrosoftDiagnosticsTracingLibraryVersion)">
      <IncludeAssets>All</IncludeAssets>
    </PackageReference>
    <PackageReference Include="xunit.performance.api" Version="$(XunitPerformanceApiVersion)" />
  </ItemGroup>

  <ItemGroup  Condition="'$(TargetFramework)'=='net461'">
    <!--
    Found conflicts between different versions of
    "System.Reflection.TypeExtensions" that could not be resolved.
    These reference conflicts are listed in the build log when log verbosity is
    set to detailed
    -->
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.4.0" />
  </ItemGroup>
</Project>

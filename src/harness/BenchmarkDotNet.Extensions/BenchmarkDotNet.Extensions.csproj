<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    
    <!-- to make sure that the users don't always need to specify -c Release when using dotnet run -->
    <Optimize>true</Optimize>
    
    <!-- Use the latest C# compiler features -->
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.11.3.1003" />
    <PackageReference Include="BenchmarkDotNet.Diagnostics.Windows" Version="0.11.3.1003" />
  </ItemGroup>

</Project>
